
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/main_menu_select"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_timetable"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:text="@string/timetable" />

    <Button
        android:id="@+id/btn_book"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_timetable"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="@string/Book_tkt" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_timetable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Booked History" />

    <Button
        android:id="@+id/map"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_history"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Mumbai Rail Map" />

</RelativeLayout>
